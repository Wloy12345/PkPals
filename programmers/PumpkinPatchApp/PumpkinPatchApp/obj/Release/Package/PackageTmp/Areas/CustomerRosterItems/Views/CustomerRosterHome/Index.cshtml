@model IEnumerable<PK_EF.CUSTOMERROSTER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CustomerRosterItems/Views/Shared/_Menu.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Farm Rosters</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-info table-hover" id="custRostTable">
        <thead>
            <tr>
                <th>
                    @*This table has metadata in the EF*@
                    @Html.DisplayNameFor(model => model.CUSTOMER.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CUSTOMER.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerRosterID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CustomerRosterID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerRosterID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#custRostTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>

</body>
</html>
