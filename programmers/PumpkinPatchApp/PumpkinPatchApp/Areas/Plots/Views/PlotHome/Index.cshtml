@model IEnumerable<PK_EF.PLOT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CustomerRosterItems/Views/Shared/_Menu.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js" defer></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.0.3/af-2.7.0/b-3.0.1/b-html5-3.0.1/cr-2.0.0/date-1.5.2/fc-5.0.0/fh-4.0.1/r-3.0.1/rg-1.5.0/sc-2.4.1/sb-1.7.0/sp-2.3.0/sr-1.4.0/datatables.min.js" defer></script>
</head>
<body>


    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-info table-hover" id="plotTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.History)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePlantec)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CROP.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CROP_WATER_STATUS.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.History)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePlantec)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CROP.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CROP_WATER_STATUS.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PlotID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PlotID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PlotID })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <script>
        $(document).ready(function () {
            $('#plotTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>
