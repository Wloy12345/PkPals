@model IEnumerable<PK_EF.EQUIPMENT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Equipment/Views/Shared/_EquipmentHome.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>

<body>
    <h2>Equipment List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-info table-hover" id="equipTable">
        <thead>
            @*This Table has metadata in the EF*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.STATUS.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STATUS.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentID })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <script>
        $(document).ready(function () {
            $('#equipTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>