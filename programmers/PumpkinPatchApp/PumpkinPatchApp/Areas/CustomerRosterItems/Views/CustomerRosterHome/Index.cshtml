@model IEnumerable<PK_EF.CUSTOMERROSTER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CustomerRosterItems/Views/Shared/_Menu.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Farm Rosters</h2>

    <p>
        @Html.ActionLink("Add New Roster »", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-info table-hover" id="custRostTable">
        <thead>
            <tr>
                <th>
                    @*This table has metadata in the EF*@
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>
                            @Html.ActionLink(item.CUSTOMER.FirstName + " " + item.CUSTOMER.LastName, "Details", "CustomerRosterHome", new { area = "CustomerRosterItems", id = item.CustomerRosterID }, null)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <button type="submit" class=" btn btn-outline-success">Export to CSV</button>
    <script>
        $(document).ready(function () {
            $('#custRostTable').DataTable({
                order: [[2, 'desc']]
            }); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>
</body>
</html>
