@model IEnumerable<PK_EF.CATEGORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SupplyCategoryItems/Views/Shared/_Menu.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>

<body>

    <h2>Supply Categories</h2>
    <p>
        @Html.ActionLink("Add New Category »", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-info table-hover" id="supCatTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>
                            @Html.ActionLink(item.Name, "Details", "SupplyCategoryHome", new { area = "SupplyCategoryItems", id = item.CategoryID }, null)

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>

    <button type="submit" class=" btn btn-outline-success">Export to CSV</button>
    <script>
        $(document).ready(function () {
            $('#supCatTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>