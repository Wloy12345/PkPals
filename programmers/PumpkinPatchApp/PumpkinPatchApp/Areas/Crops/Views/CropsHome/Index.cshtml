@model IEnumerable<PK_EF.CROP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Crops/Views/Shared/_CropHome.cshtml";

}


<!DOCTYPE html>
<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js" defer></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.0.3/af-2.7.0/b-3.0.1/b-html5-3.0.1/cr-2.0.0/date-1.5.2/fc-5.0.0/fh-4.0.1/r-3.0.1/rg-1.5.0/sc-2.4.1/sb-1.7.0/sp-2.3.0/sr-1.4.0/datatables.min.js" defer></script>
</head>
        <body>
            <h2>Crops Home</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table table-striped table-info table-hover" id="cropTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DaysTillHarvest)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Season)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShelfLife)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MarketValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CropRotationRecom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HarvestTechniques)
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DaysTillHarvest)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Season)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShelfLife)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MarketValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WaterAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CropRotationRecom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HarvestTechniques)
                            </td>
                            <td>
                               
                                @Html.ActionLink("Details", "Details", new { id = item.CropID }) 
                                
                            </td>
                        </tr>
                    }
                </tbody>

            </table>


            <script>
                $(document).ready(function () {
                    $('#cropTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
                });
            </script>
        </body>
        </html>
