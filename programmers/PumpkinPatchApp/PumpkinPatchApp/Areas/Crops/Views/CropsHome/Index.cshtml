@model IEnumerable<PK_EF.CROP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Crops/Views/Shared/_CropHome.cshtml";

}


<!DOCTYPE html>
<html>
<head>

    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
    <script src="~/Scripts/tableexport.min.js"></script>
</head>

<body>
    <p>

    </p>
    <h2>Crops Home</h2>

    <p>
        @Html.ActionLink("Add New Crop »", "Create", null, new { @class = "btn btn-success" })
    </p>



    <table class="table table-striped table-info table-hover" id="cropTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DaysTillHarvest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShelfLife)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarketValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WaterAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CropRotationRecom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HarvestTechniques)
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.CropID })">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>


                        @*<a @Html.ActionLink("Details", " ", new { id = item.CropID })> @Html.DisplayFor(modelItem => item.Name) </a>*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DaysTillHarvest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShelfLife)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MarketValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WaterAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CropRotationRecom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HarvestTechniques)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <button id="exportButton">Export Table</button>

    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#cropTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        }
    </script>
</body>
</html>
