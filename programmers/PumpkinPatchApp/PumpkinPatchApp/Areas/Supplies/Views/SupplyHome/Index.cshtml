@model IEnumerable<PK_EF.SUPPLy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Supplies/Views/Shared/_SupplyHome.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Supply List</h2>

    <p>
        @Html.ActionLink("Add New Supply »", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-info table-hover" id="supTable">
        <thead>
            @*This table has metadata in the EF*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CATEGORY.Name)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>
                            @Html.ActionLink(item.Name, "Details", "SupplyHome", new { area = "Supplies", id = item.SuppliesID }, null)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CATEGORY.Name)
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>

    <button type="submit" class=" btn btn-outline-success">Export to CSV</button>
    <script>
        $(document).ready(function () {
            $('#supTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>
