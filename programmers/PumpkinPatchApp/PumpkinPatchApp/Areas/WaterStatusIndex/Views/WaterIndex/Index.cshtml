@model IEnumerable<PK_EF.PLOT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Crops/Views/Shared/_CropHome.cshtml";
}

<!DOCTYPE html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>


    <h2>Water Status</h2>

    <p>
        @*Html.ActionLink("", "Edit", null, new {@class = "btn btn-success"})*@
    </p>
    <table class="table table-hover table-info table-striped" id="waterTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CROP.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CROP_WATER_STATUS.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CROP.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.PlotID, @class = "successLink" })">
                            @Html.DisplayFor(modelItem => item.CROP_WATER_STATUS.Name)
                        </a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                    <td>
                        @* @Html.ActionLink("Edit", "Edit", new { id = item.PlotID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.PlotID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.PlotID })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#waterTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>

</body>