@model IEnumerable<PK_EF.INVENTORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/InventoryItems/Views/Shared/_Menu.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Farm Inventory Home</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-info table-hover" id="inventTable">
        <thead>
            @*This table has metadata in the EF*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    Farm Name
                </th>
                <th>
                    Supply Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SUPPLy.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.InventoryID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.InventoryID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.InventoryID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
    $(document).ready(function () {
        $('#inventTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
    });
    </script>
</body>
</html>
