@model IEnumerable<PK_EF.INVENTORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/InventoryItems/Views/Shared/_Menu.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Farm Inventory Home</h2>

    <p>
        @Html.ActionLink("Add New Inventory »", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-info table-hover" id="inventTable">
        <thead>
            @*This table has metadata in the EF*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SUPPLy.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity) (@Html.DisplayNameFor(model => model.SUPPLy.Unit))
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FARM.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>
                            @Html.ActionLink(item.SUPPLy.Name, "Details", "InventoryHome", new { area = "InventoryItems", id = item.InventoryID }, null)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity) @Html.DisplayFor(modelItem => item.SUPPLy.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FARM.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <button type="submit" class=" btn btn-outline-success">Export to CSV</button>
    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#inventTable').DataTable({
                search: {
                    search: 'Long'
                },
                order: [[3, 'desc']]

            }
            ); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>
