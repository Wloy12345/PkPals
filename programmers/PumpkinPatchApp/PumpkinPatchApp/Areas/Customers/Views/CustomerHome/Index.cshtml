@model IEnumerable<PK_EF.CUSTOMER>
@{ 
    ViewBag.Title = "Index";
    Layout = "~/Areas/CUSTOMERs/Views/Shared/_CustomerHome.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/dataTables.min.js" defer></script>
    <script src="~/Scripts/dataTables.bootstrap5.min.js" defer></script>
</head>
<body>
    <h2>Employee List</h2>

    <p>
        @Html.ActionLink("Add New Employee »", "Create", null, new { @class = "btn btn-success" })
    </p>

    <table class="table table-striped table-info table-hover" id="custTable">
        <thead>
            @*This Table has metadata in the EF*@
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>
                            @Html.ActionLink(item.FirstName + " " + item.LastName, "Details", "CustomerHome", new { area = "Customers", id = item.CustomerID }, null)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center;">
        <p>
            To change the order of the table, click on the headers for easy sorting.
        </p>
    </div>

    <button type="submit" class=" btn btn-outline-success">Export to CSV</button>
    <style>
        a {
            color: #165E45;
            text-decoration: underline;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#custTable').DataTable(); // Initialize DataTables for your table (replace 'empTable' with your table ID)
        });
    </script>
</body>
</html>
